<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_main" android:theme="@style/NaturalHourAppTheme.Dark.Large"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/daydream_bg">

    <FrameLayout android:id="@+id/layout_clock"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="16dp">

        <com.forrestguice.suntimes.naturalhour.ui.clockview.NaturalHourClockView
            android:id="@+id/clock"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>

</FrameLayout>